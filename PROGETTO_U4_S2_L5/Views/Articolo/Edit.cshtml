@model ArticoloEdit

@{
	ViewData["Title"] = "Modifica articolo";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<form asp-controller="Articolo" asp-action="SaveEdit" method="post" asp-route-id="@Model.Id">
	<div class="form-group mb-3">
		<label asp-for="Nome" class="control-label"></label>
		<input asp-for="Nome" class="form-control" />
		<span asp-validation-for="Nome" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="Prezzo" class="control-label"></label>
		<input type="number" asp-for="Prezzo" class="form-control" step="0.01"/>
		<span asp-validation-for="Prezzo" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="Descrizione" class="control-label"></label>
		<textarea asp-for="Descrizione" class="form-control"></textarea>
		<span asp-validation-for="Descrizione" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="Immagine" class="control-label"></label>
		<input asp-for="Immagine" class="form-control" />
		<span asp-validation-for="Immagine" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="ImmagineAggiuntiva1" class="control-label"></label>
		<input asp-for="ImmagineAggiuntiva1" class="form-control" />
		<span asp-validation-for="ImmagineAggiuntiva1" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="ImmagineAggiuntiva2" class="control-label"></label>
		<input asp-for="ImmagineAggiuntiva2" class="form-control" />
		<span asp-validation-for="ImmagineAggiuntiva2" class="text-danger"></span>
	</div>
	<div class="form-group">
		<button type="submit" class="homeBtn">Salva edit</button>
	</div>
</form>
